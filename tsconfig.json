{
  "compileOnSave": true,
  "compilerOptions": {
    "lib": [
      "es2021",
      "dom"
    ],
    "types": [
      "node"
    ],
    "module": "CommonJS",
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "target": "es2021",
    "baseUrl": "./",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "rootDir": "src",
    "outDir": "lib",
    "strict": true,
    "declaration": true
  },
  "include": [
    "src/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
